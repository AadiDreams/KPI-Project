<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Account</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .content-area {
            padding: 20px;
        }

        .section {
            margin-bottom: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .section h3 {
            color: #b30000;
            margin-bottom: 15px;
        }

        .profile-info p {
            font-size: 16px;
            margin: 5px 0;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 95%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-submit {
            background-color: #b30000;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .btn-submit:hover {
            background-color: #cc0000;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <%- include('partials/sidebar-dept', { active: 'account' }) %>
        <!-- Main Content -->
        <main class="main-content">
            <div class="top-bar">
                <div class="profile">
                    <span>Welcome, <%= departmentName %></span>
                    <div class="profile-icon">ðŸ‘¤</div>
                </div>
                <div class="notification">
                    <span>ðŸ””</span>
                </div>
            </div>

            <div class="content-area">
                <!-- Profile Section -->
                <div class="section">
                    <h3>Profile</h3>
                    <div class="profile-info">
                        <p><strong>Department Name:</strong> <span><%= departmentName %></span></p>
                        <p><strong>Department ID:</strong> <span><%= departmentID %></span></p>
                    </div>
                </div>

                <!-- Account Section -->
                <div class="section">
                    <h3>Account</h3>
                    <form id="change-password-form" action="/department/<%= departmentID %>/account/update-password" method="post">
                        <div class="form-group">
                            <label for="current-password">Current Password</label>
                            <input type="password" id="current-password" name="currentPassword" required>
                        </div>
                        <div class="form-group">
                            <label for="new-password">New Password</label>
                            <input type="password" id="new-password" name="newPassword" required>
                        </div>
                        <div class="form-group">
                            <label for="confirm-password">Confirm Password</label>
                            <input type="password" id="confirm-password" name="confirmPassword" required>
                        </div>
                        <button type="submit" class="btn-submit">Change Password</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
